                            <li class="nav-font"><a href="#">Masterfood Mars Settings</a></li>
                            <li class="nav-font"><a href="#">Excel Order Settings</a></li>                         
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>               
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    

<div class="container body-content">
    <div id="UpdateContentDiv" style="min-height:600px;">@{
        var isHome = ViewContext.RouteData.Values["controller"].ToString().ToUpper() == "HOME";
        var isIndex = ViewContext.RouteData.Values["action"].ToString().ToUpper() == "INDEX";
        if (isHome && isIndex)
        {
            Html.RenderAction("OrderTracking", "Admin");
        }
    }</div>
    @RenderBody()
</div>
<hr />
<footer id="footer">
   <div class="copyright_footer2">Copyright ©2019 Visy, All rights reserved.</div>
</footer>
<script src="@Url.Content("~/Scripts/respond.js")" type="text/javascript"></script>
@*@Scripts.Render("~/bundles/bootstrap")*@
@Scripts.Render("~/bundles/jqueryval")
@RenderSection("scripts", required: false)


</body>
</html>
