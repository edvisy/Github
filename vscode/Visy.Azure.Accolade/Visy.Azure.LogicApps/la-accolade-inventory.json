                                                            "Subject": "Accolade Inventory Snapshot Failed Message (UAT)",
                                                            "To": "biztalk_team_v@visy.com.au"
                                                        },
                                                        "host": {
                                                            "connection": {
                                                                "name": "@parameters('$connections')['office365']['connectionId']"
                                                            }
                                                        },
                                                        "method": "post",
                                                        "path": "/v2/Mail"
